<h1>Comments index</h1>

<div class="row">
  <div class="large-2 columns panel">
    <h4>All parts</h4>
    <% @parts.each_with_index do |p,index| %>
      <%= link_to (index+1).to_s+' '+p.title, [@tutorial,p], class: 'custom-button-class disabled' %>
    <% end %>
  </div>
  <div class="large-10 columns">
    <div class="row">
      <div class="text-center columns panel">
        <h4><%= @part.title %></h4>
        <p><%= @part.content %></p>
      </div>
    </div>
    <div class="row">
      <div class="columns">
        <h4>Comments</h4>
        <%= form_for([@tutorial,@part,@part.part_comments.build]) do |f| %>
          <div class="row">
            <div class="large-12 columns">
              <%= f.label :content %>
              <%= f.text_field :content %>
            </div>
          </div>

          <div class="row">
            <div class="large-12 columns">
              <%= f.submit %>
            </div>
          </div>
        <% end %>
        <% @comments[0..-2].reverse.each_with_index do |c, index| %>
          <p>
            <%= c.user.email %><br>
            <%= c.content %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>