<% if user_signed_in? %>
  <%= form_for(grade_link) do |f| %>
    <%= f.label :grade do %>
      Grade (1 to 10)
    <% end %>
    <%= f.number_field(:grade, in: 1.0..10.0, step: 0.1, value: grade_value) %>
    <div class="text-right">
      <%= f.submit 'Set grade', class: 'button tiny expand' %>
    </div>
  <% end %>
<% else %>
  Grade<br>
  <input type="text" disabled value="<%= grade_value %>"/>
<% end %>