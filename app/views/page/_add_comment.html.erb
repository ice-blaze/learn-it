<% if user_signed_in? %>
  <h4>Comments</h4>
  <%= form_for(link) do |f| %>
    <div class="row">
      <div class="large-12 columns">
        <%= f.text_field :content, placeholder: 'New comment' %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns text-right">
        <%= f.submit 'add comment', class: 'button tiny'%>
      </div>
    </div>
  <% end %>
<% end %>