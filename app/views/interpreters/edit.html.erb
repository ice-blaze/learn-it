<h1>Interpreters#edit</h1>

<%= form_for :interpreter, url: interpreter_path(@interpreter), method: :patch do |f| %>
  <% if @interpreter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interpreter.errors.count, 'error') %> prohibited this interpreter from being saved:</h2>
      <ul>
        <% @interpreter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :is_finish %>
      <%= f.check_box :is_finish %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :open_token %>
      <%= f.text_field :open_token %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :close_token %>
      <%= f.text_field :close_token %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>



<h2>Add function:</h2>
<%= form_for([@interpreter, @interpreter.functions.build]) do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :regex %>
      <%= f.text_area :regex %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>

<h2>All functions:</h2>
<% @functions[0..-2].each_with_index do |f, index| %>
  <%= render partial: 'functions/function', locals: {index: index, function: f} %>
<% end %>