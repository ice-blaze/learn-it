<%= form_for link, namespace: link.last.id do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description, namespace: link.last.id, class: 'tinymce', rows: 15 %>
      <%= tinymce %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :regex %>
      <%= f.text_area :regex %>
    </div>
    <div class="large-6 columns">
      <label>Regex tester</label>
      <textarea onchange="regexTester(this, '<%= link.last.id %>_function_regex')"> </textarea>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :content %>
      <%= f.text_area :content, namespace: link.last.id.to_s, size: '1x15' %>

    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.submit class: 'button tiny' %>
    </div>
    <div class="large-6 columns">
      <% unless new %>
        <%= link_to 'delete', link, method: :delete, class: 'button tiny alert right' %>
        <%= link_to 'Go to the page', link, class: 'button tiny right' %>
      <% end %>
    </div>
  </div>
<% end %>