<div class="row">
  <div class="large-12 columns">
    <h1>Tutorials#show</h1>
    <div class="row">
      <div class="large-4 columns">
        <h4><%= @tutorial.title %></h4>
        <p>Is finished : <%= @tutorial.is_finish.yesno.downcase %></p>
      </div>
      <div class="large-6 columns">
        <h4><%= @tutorial.description %></h4>
      </div>
      <div class="large-2 columns">
        <% if user_signed_in? && @tutorial.user == current_user %>
          <div class="text-right">
            <%= link_to 'Edit', edit_tutorial_path(@tutorial), class: 'button small' %>
          </div>
        <% end %>

        <!--grade section-->
        <%= render partial: 'page/grade', locals: {
            grade_link: [@tutorial,@tutorial.tutorial_grades.build],
            grade_value: @grade
        }%>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 columns text-center">
    <%= link_to 'Start', [@tutorial,@tutorial.parts.first], class: 'button small' %>
  </div>
</div>

<div class="row">

  <!--Tutorial parts zone-->
  <div class="large-2 columns">
    <%= render partial: 'parts/parts',
               locals: {parts: @tutorial.parts,
                        tutorial: @tutorial,
                        user: current_user}  %>
  </div>

  <!--New comment zone-->
  <div class="large-10 columns">

    <%= render partial: 'page/add_comment', locals: {link: [@tutorial,@tutorial.tutorial_comments.build]} %>
    <br>

    <!--Comments zone-->
    <% @tutorial.tutorial_comments[0..-2].reverse.each do |c| %>
      <div class="row comment-panel">

        <!-- Content zone-->
        <%= render partial: 'page/comment_content', locals: {comment: c} %>

        <!-- +/- zone, vote of comments-->
        <div class="large-2 columns text-right">
          <%= render partial: 'page/comment_vote', locals: {
              votes: c.tutorial_comment_votes,
              update_vote_link: [@tutorial,c],
              create_vote_link: [@tutorial,c,c.tutorial_comment_votes.build]
          } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
