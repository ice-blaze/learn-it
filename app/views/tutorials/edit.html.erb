<h1>Tutorials#edit</h1>

<%= form_for :tutorial, url: tutorial_path(@tutorial), method: :patch do |f| %>
  <% if @tutorial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tutorial.errors.count, 'error') %> prohibited this interpreter from being saved:</h2>
      <ul>
        <% @tutorial.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :interpreter %>
      <%= f.collection_select :interpreter_id, Interpreter.all, :id, :title %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :is_finish %>
      <%= f.check_box :is_finish %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.submit 'save' %>
    </div>
  </div>
<% end %>

<%= form_for ([@tutorial, @tutorial.parts.build]) do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :signature %>
      <%= f.text_area :signature %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>

<%= render partial: 'parts/parts',
           locals: {parts: @parts[0..-2],
                    tutorial: @tutorial,
                    user: current_user}  %>




